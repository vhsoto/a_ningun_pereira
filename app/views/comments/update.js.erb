<% if @comment.valid?  %>
	$("#comment-" + <%= @comment.id %>);
	$(".js-new-comment").html("<%= escape_javascript(render partial: 'comments/form', locals: {complaint: @complaint, comment: @comment}) %>");    
<% else %>
  $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: {complaint: @complaint, comment: @comment}) %>");
<% end %>