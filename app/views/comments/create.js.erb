<% if @comment.valid?  %>
var selector = "#comment-" + <%= @comment.id %>;
	$(".js-comments").prepend("<%= escape_javascript(render(@comment)) %>"); 
	$(selector).effect("highlight", {}, 2000);
	$(".js-new-comment").removeClass("hide").slideUp();
	$(".js-new-comment").html("<%= escape_javascript(render partial: 'comments/form', locals: {complaint: @complaint, comment: Comment.new}) %>");
    $('.js-comments-count').html("<%= pluralize(@complaint.comments.count, 'Comentario')%>")
<% else %>
  $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: {complaint: @complaint, comment: @comment}) %>");
<% end %>